<div class="form-container row center">
  <h2 class="page-header">Create a new Note</h2>
  <form class="center" action="/notes" method="POST">

    <div class="input-field row">
      <label for="content">Enter your note</label>
      <textarea class="materialize-textarea" name="note[content]" id="content"></textarea>
    </div>

    <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
  </form>
</div>