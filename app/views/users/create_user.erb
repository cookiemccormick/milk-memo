<div class="form-container row center">
  <h2 class="page-header">Sign Up</h2>
  <form class="center" action="/signup" method="POST">
    <div class="input-field row">
      <label for="username">Username</label>
      <input type="text" name="user[username]" id="username">
    </div>
    <div class="input-field row">
      <label for="password">Password</label>
      <input type="password" name="user[password]" id="password">
    </div>
    <div class="input-field row">
      <label for="email">Email</label>
      <input type="email" name="user[email]" id="email">
    </div>
    <div class="input-field row">
      <label for="due_date">Due Date</label>
      <input class="datepicker" type="text" name="baby[due_date]" id="due_date">
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="action">Sign Up</button>
  </form>
</div>