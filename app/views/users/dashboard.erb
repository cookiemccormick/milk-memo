<section>
  <h2>Welcome <%= current_user.username %> you have
    <%= @birth_count %> days to go!
  </h2>
</section>

<section>
  <h3>
    <% if @baby.name.present? %>
      About <%= @baby.name %>:
    <% else %>
      About your baby:
    <% end %>
  </h3>

  <h4>Gender: <%= @baby.gender %></h4>
  <h4>Due Date: <%= @baby.due_date.strftime("%-m/%-d/%y") %></h4>
  <h4>Current Size:</h4>

  <% if @weeks < 4 %>
    Your baby is still growing and not the size of any fruits or vegetables yet.
  <% else %>
    <figure>
      <img src="images/<%= @weeks %>_weeks.jpg" alt="picture of a <%= Baby::SIZES[@weeks.to_s] %>">
      <figcaption>Your baby is approximately the size of a <%= Baby::SIZES[@weeks.to_s] %>.</figcaption>
    </figure>
  <% end %>

  <br>

  <a href="/baby/edit">Edit</a>
</section>

<section>
  <h3>Notes Log:</h3>
    <ul>
      <% current_user.notes.order("created_at DESC").each do |note| %>
        <li>
          <%= note.created_at.month %>/<%= note.created_at.day %> - <%= note.content %>
          <a href="/notes/<%= note.id %>/edit">Edit</a>
        </li>
      <% end %>
    </ul>
    <a href="/notes/new">Add Note</a>
  </section>

  <section>
    <h3>Medications:</h3>
    <ul>
      <% current_user.medicines.order("name ASC").each do |medicine| %>
        <li>
          <%= medicine.name %> - <%= medicine.dose %>
          <br>
          <%= medicine.description %>
          <br>
          <a href="/medicines/<%= medicine.id %>/edit">Edit</a>
        </li>
      <% end %>
    </ul>
    <a href="/medicines/new">Add Medication</a>
  </section>

  <section>
    <h3>Appointments:</h3>
    <ul>
      <% current_user.appointments.order("date ASC, time ASC").each do |appointment| %>
        <li>
          <%= appointment.date.strftime("%-m/%-d") %> <%= appointment.time.strftime("%l:%M%p") %>
          <br>
          <%= appointment.name %>
          <br>
          <a href="/appointments/<%= appointment.id %>/edit">Edit</a>
        </li>
      <% end %>
    </ul>
    <a href="/appointments/new">Add Appointment</a>
    <h3>
  </section>

  <section>
    <a class="button" href="/logout">Logout</a>
  </section>